            <form action="#">

                <div class="form-step form-step-active">
                    <div class="name-input mt-10">
                        <h4 class="name-header">Client Name <span class="required">(Required)</span></h4>
                        <div class="mt-10">
                            <label for="fname"> First Name</label>
                            <input id="fname" class="mt-10 isvalid" type="text" placeholder="Enter First Name" required>
                        </div>
                        <div class="mt-10">
                            <label for="lastname"> Last Name</label>
                            <input id="lastname" class="mt-10 isvalid" type="text" placeholder="Enter Last Name" required>
                        </div>
                    </div>

                    <div class="name-input mt-10">   
                        <div>
                            <label for="phone">Mobile <span class="required">(Required)</span></label>
                            <input id="phone" class="mt-10 isvalid" type="tel" placeholder=" Enter Phone Number" required>
                        </div>
                        <div>
                            <label for="email">Email <span class="required">(Required)</span></label>
                            <input id="email" class="mt-10 isvalid" type="email" placeholder="Enter Email" required>
                        </div>
                    </div>

                    <div class="name-input mt-10">   
                        <div>
                            <label for="country">Country <span class="required">(Required)</span></label>
                            <select id="country" class="mt-10 form-select country isvalid" aria-label="Default select example" onchange="loadStates()" required>
                                <option selected>Select Country</option>
                            </select>
                        </div>
                        <div>
                            <label for="state">State</label>
                            <select id="state" class="mt-10 form-select state isvalid" aria-label="Default select example" onchange="loadCities()" onfocus="updateInputType()"  required>
                                <option selected>Select State</option>
                            </select>
                        </div>
                    </div>

                    <div class="home-address mt-10">
                        <label for="homeaddress">Home Address </label>
                        <input id="homeaddress" class="mt-10 isvalid" type="text" placeholder="Enter your address">
                    </div>

                    <div class="name-input mt-10">   
                        <div>
                            <label for="city">City</label>
                            <select id="city" class="mt-10 form-select city isvalid" aria-label="Default select example">
                                <option selected>Select City</option>
                            </select>
                        </div>
                        <div>
                            <label for="zipcode">Zip Code </label>
                            <input id="zipcode" class="mt-10 isvalid" type="text" placeholder="Enter Zipcode">
                        </div>
                    </div>

                    <div class="name-input mt-10">   
                        <div>
                            <label for="dob">DOB <span class="required">(Required)</span></label>
                            <input id="dob" class="mt-10 isvalid" type="date" required>
                        </div>
                        <div id="inputContainer">
                            <label for="idnumber">SSN / SIN / NIN / TFN<span class="required">(Required)</span></label>
                            <input id="idnumber" class="mt-10 isvalid" type="text" placeholder="Enter Country Identity Number"required>
